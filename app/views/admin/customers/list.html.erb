<div class="container">
  <div class="row">
    <h2>注文履歴一覧</h2>
  </div>
  <div class="row">
    <div class="col-xs-8">
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |oh| %>
            <tr>
              <td>
                <%= link_to oh.created_at.strftime("%Y/%m/%d %H:%M:%S"), "/admin/orders/#{oh.id}" , :style=>"color:black;" %>
              </td>
              <td>
                <%= "#{oh.customer.last_name}　#{oh.customer.first_name}" %>
              </td>
              <td>
                <%= oh.order_items.map{ |op| op.amount}.sum %>
              </td>
              <td>
                <%= oh.status %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <%#= paginate @order_items, params: { prev_path: @prev_path, customer_id: @customer_id} %>
    </div>
  </div>




</div>