<div class="container">
  <div class="row">
    <h2>ジャンル一覧・追加</h2>
  </div>
  <div class="row">
    <div class="col-xs-8">
      <%= form_with model: @genre,url: admin_genres_path,local: true do |form| %>
        <p>
          <%= form.label :name, "ジャンル名" %>
          <%= form.text_field :name, placeholder:"ジャンル名" %>
          <%= form.submit "新規登録", class: "btn btn-success" %>
        </p>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-8">
      <table class="table">
        <tr class="thead-light">
          <th>ジャンル</th>
          <th></th>
        </tr>
        <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
