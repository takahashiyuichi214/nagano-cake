<div class="container">
  <div class="row">
    <h2>商品新規登録</h2>
  </div>
  <%= form_with model: @item  ,url: admin_items_path, local: true do |form| %>
    <div class="row">
      <div class="col-xs-8">
        <div class="form-group">
          <%= form.label :image, "商品画像" %><br>
          <%= form.attachment_field :image %>
        </div>
        <div class="form-group">
          <%= form.label :name, "商品名" %><br>
          <%= form.text_field :name, placeholder:"商品名" %>
        </div>
        <div class="form-group">
          <%= form.label :introduction, "商品説明" %><br>
          <%= form.text_area :introduction, placeholder:"ここに説明文を記載します" %>
        </div>
        <div class="form-group">
          <%= form.label :genre_id, "ジャンル" %><br>
          <%= form.collection_select :genre_id, Genre.all, :id, :name, include_blank: "--選択して下さい--" %>
        </div>
        <div class="form-group">
          <%= form.label :price, "税抜価格" %><br>
          <%= form.text_field :price, placeholder:"1000" %>円
        </div>
        <div class="form-group">
          <%= form.label :is_active, "販売ステータス" %><br>
          <%= form.radio_button :is_active,:true %>
          <%= form.label :is_active, "販売中", {value: :true, style: "display: inline-block;"} %>
          <%= form.radio_button :is_active,:false %>
          <%= form.label :is_active, "販売停止中", {value: :false, style: "display: inline-block;"} %>
        </div>
        <div class="action">
          <%= form.submit"新規登録", class: "btn btn-success"%>
        </div>
      </div>
    </div>
  <% end %>
</div>