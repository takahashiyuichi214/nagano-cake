<div class="container">
  <div class="row">
    <h2>商品詳細</h2>
  </div>

  <div class="row">
    <div class="col-xs-4">
			<%= attachment_image_tag @item, :image, format: "jpg", fallback: "no_image.jpg", size:'245x245' %>
    </div>
    <div class="col-xs-8">
      <div class="table-responsive">
        <table class="table text-nowrap">
          <tbody>
            <tr>
              <td>商品名</td>
              <td>
                <%= @item.name %>
              </td>
            </tr>
            <tr>
              <td>商品説明</td>
              <td>
                <%= @item.introduction %>
              </td>
            </tr>
            <tr>
              <td>ジャンル</td>
              <td>
                <%= @item.genre_id %>

              </td>
            </tr>
            <tr>
              <td>税込価格</br>(税抜価格)</td>
              <td>
                <%= (@item.price * @tax).round  %>
              </td>
            </tr>
            <tr>
              <td>販売ステータス</td>
              <td>
                <% if @item.is_active==true%>
                  <div class="text-success">
                    <%= "販売中" %>
                  </div>
                <% else %>
                  <div class="text-secondary">
                    <%= "売り切れ" %>
                  </div>
                <% end %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="row">
    <%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success" %>
  </div>
</div>

