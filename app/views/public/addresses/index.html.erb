<div class="container">
  <div class="row">
    <h2>配送先登録/一覧</h2>
  </div>
  <%= form_with model: @address, url: addresses_path, rocal: true do |form| %>
    <div class="row">
      <div class="col-md-10">
        <div class="form-group">
          <%= form.label :postal_code,"郵便番号（ハイフンなし）" %>
          <%= form.text_field :postal_code,placeholder: "0000000" %>
        </div>

        <div class="form-group">
          <%= form.label :address,"住所" %>
          <%= form.text_field :address,placeholder: "東京都渋谷区代々木神園町0-00-0", size: "60" %>
        </div>

        <div class="form-group">
          <%= form.label :name,"宛名" %>
          <%= form.text_field :name,placeholder: "令和道子" %>
        </div>
      </div>
      <div class="col-md-2">
        <%= form.submit "新規登録" , class: "btn btn-success"%>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12 table-responsive">
       <table class="table">
         <thead class="thead-light">
          <tr>
            <th style="width:50px">郵便番号</th>
            <th style="width:250px">住所</th>
            <th style="width:100px">宛名</th>
            <th style="width:200px"></th>
          </tr>
        </thead>

          <% @addresses.each do |address| %>
            <tr>
              <td><%= address.postal_code %></td>
              <td><%= address.address %></td>
              <td><%= address.name %></td>
              <td>
                <%= link_to "編集する", edit_address_path(address.id), class: "btn btn-success" %>
                <%= link_to "削除する", address_path(address.id), method: :delete , class: "btn btn-danger"%>
              </td>
            </tr>
          <% end %>
       </table>
      </div>
    </div>
  <% end %>
</div>