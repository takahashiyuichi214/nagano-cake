<div class="container">
  <div class="row">
    <h2>配送先編集</h2>
  </div>

  <%= form_with model: @address, url: address_path(@address.id), local: true do |form| %>
  <div class="row">
    <div class="col-md-3">
      <%= form.label :postal_code,"郵便番号（ハイフンなし）" %>
    </div>
    <div class="col-md-3">
      <%= form.text_field :postal_code %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3">
      <%= form.label :address,"住所" %>
    </div>
    <div class="col-md-3">
      <%= form.text_field :address, size: "60" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3">
      <%= form.label :name,"宛名" %>
    </div>
    <div class="col-md-4">
      <%= form.text_field :name %>
    </div>

    <div class="col-md-4">
      <%= form.submit "変更内容を保存", class: "btn btn-success" %>
    </div>
  </div>
  <% end %>
  </div>











