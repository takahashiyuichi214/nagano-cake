<div class="container">
  <div class="row">
    <h2>注文履歴一覧</h2>
  </div>
  <div class="row">
    <div class="col-md-12 table-responsive-md">
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td>
                <%= order.created_at.strftime('%Y/%m/%d') %>
              </td>
              <td>
      					<span>〒<%= order.postal_code %></span><br>
      					<span><%= order.address %></span><br>
      					<span><%= order.name %></span>
              </td>
              <td>
                <% order.order_items.each do |op| %>
                  <span><%= op.item.name %></span><br>
                <% end %>
              </td>
              <td>
                <%= order.total_payment %>
              </td>
              <td>
                <%= order.status %>
              </td>
              <td>
                <%= link_to "表示する", order_path(order.id), class: "btn btn-primary" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>