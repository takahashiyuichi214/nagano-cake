<div class="container">
  <div class="row">
    <h2>商品一覧<span>(全<%= @amount %>件)</span></h2>
  </div>
  <div class="row">
    <% @items.each do |item| %>
      <div class="col-md-3">
        <%= link_to item_path(item.id) do %>
          <%= attachment_image_tag item, :image, format: 'jpeg', fallback: "no_image.jpg", size: 150 %><br>
        <% end %>
        <%= link_to item_path(item.id) do %>
          <%= item.name %> <br>
        <% end %>
        <% if item.is_active == true %>
          ￥<%= item.price %>
        <% else %>
          売切れ
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
      <%= paginate @items %>
    </div>
    <div class="col-md-4"></div>
  </div>
</div>








