<div class="container">
  <div class="row">
    <h2>会員情報編集</h2>
  </div>
  <%= form_with model: @customer, local: true do |form| %>
    <div class="row">
      <div class="col-md-2">
        <span>氏名</span>
      </div>
      <div class="col-md-3">
        <%= form.text_field :last_name %>
      </div>
      <div class="col-md-3">
        <%= form.text_field :first_name %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-2">
        <span>フリガナ</span>
      </div>
      <div class="col-md-3">
        <%= form.text_field :last_name_kana %>
      </div>
      <div class="col-md-3">
        <%= form.text_field :first_name_kana %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-2">
        <span>郵便番号</span>
      </div>
      <div class="col-md-3">
        <%= form.text_field :postal_code %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-2">
        <span>住所</span>
      </div>
      <div class="col-md-3">
        <%= form.text_field :address, size: "60" %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-2">
        <span>電話番号</span>
      </div>
      <div class="col-md-3">
        <%= form.text_field :telephone_number %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-2">
        <span>メールアドレス</span>
      </div>
      <div class="col-md-3">
        <%= form.text_field :email %>
      </div>
    </div>






    <div class="row">
      <div class="col-md-6">
        <%= form.submit "編集内容を保存", class: "btn btn-success" %>
      </div>
      <div class="col-md-6">
        <%= link_to "退会する", customers_unsubscribe_path, class: "btn btn-danger" %>
      </div>
    </div>
  <% end %>
</div>
















